---
import DoraCalculator from './calculators/DoraCalculator.astro';
import TechDebtCalculator from './calculators/TechDebtCalculator.astro';
import IncidentCostCalculator from './calculators/IncidentCostCalculator.astro';
import CodeQualityCalculator from './calculators/CodeQualityCalculator.astro';
---

<div id="interactive-calculators" class="space-y-8">
  <!-- Section Header -->
  <div class="text-center mb-8">
    <h2 class="text-3xl font-bold text-primary-900 dark:text-primary-100 mb-4">
      Interactive Engineering Tools
    </h2>
    <p class="text-lg text-primary-600 dark:text-primary-400 max-w-3xl mx-auto">
      Practical calculators and tools to help you measure and improve your engineering practices.
    </p>
  </div>

  <!-- Calculators Grid -->
  <div class="grid gap-8 md:grid-cols-2">
    <DoraCalculator />
    <TechDebtCalculator />
    <IncidentCostCalculator />
    <CodeQualityCalculator />
  </div>
</div>
